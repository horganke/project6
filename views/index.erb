<!doctype html>
<html>
  <head>
    <title>Holiday App!</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/jquery-1.10.2.min.js"></script>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class = "container">
      <div class = "row">
        <div class="col-md-6">
        <h3>Holidays for the Current Month</h3>
          <% @holidays_current.each do |date| %>
            <% date.each do |holiday| %>
              <p><%= holiday['name'] %> : <%= holiday['date'] %></p><br>
            <% end %>
          <% end %>
        </div>
        <div class = "col-md-6">
          <h3>Holidays for my Birth Month</h3>
          <% @holidays_birth.each do |date| %>
            <% date.each do |holiday| %>
              <p><%= holiday['name'] %> : <%= holiday['date'] %></p><br>
            <% end %>
        <% end %>

      </div>
    </div>
  </body>
</html>